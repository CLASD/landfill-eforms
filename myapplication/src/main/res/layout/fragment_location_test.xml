<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sanitation.la.project.myapplication.ui.LocationTestFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GPS Logger"
        android:id="@+id/locationTitleTextView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/locationSwitch"
        android:layout_toStartOf="@+id/locationSwitch" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationTestTextView"
            android:layout_below="@id/locationTitleTextView"
            android:text="@string/hello_blank_fragment"
            android:layout_toLeftOf="@+id/locationSwitch"
            android:layout_toStartOf="@+id/locationSwitch" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/locationTestTextView"
            android:layout_above="@+id/textView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where am I?"
            android:id="@+id/wbutton"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationSpeedSeekBar"
        android:layout_above="@+id/wbutton"
        android:layout_alignParentLeft="true"
        android:layout_margin="6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Minimum Distance (m)"
        android:id="@+id/textView"
        android:layout_above="@+id/locationSpeedSeekBar"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Only"
        android:id="@+id/locationSwitch"
        android:layout_above="@+id/listView"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
